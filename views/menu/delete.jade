extends ../layout.jade
block contenido
    div(class="col-md-5 center-block no-float top-space text-left")
        h1 Eliminar #[span= product.title]
        form(method="POST" action="/menu/#{product.id}?_method=delete" style="margin-top:1.5em;")
            .form-group
                label Contraseña
                input(type="password" name="password" placeholder="Contraeña" class="form-control")
            .form-group.text-right
                input(type="submit" class="btn btn-info" value="Guardar")