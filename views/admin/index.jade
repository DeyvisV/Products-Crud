extends ../layout.jade
block contenido
    h1 Panel de administración
    table.table
        caption Productos Actuales
        thead
            tr
                th #
                th Nombre
                th Descripción
                th Precio
                th Imágenes
                th Acciones
        tbody
            each product in products
                tr
                    td= product.id
                    td= product.title
                    td= product.description
                    td= product.price
                    td
                        a(href="#{product.imageUrl}" class="btn") Ver Imagen
                    td 
                        a(href="/menu/edit/#{product.id}") Editar
                        =" - "
                        a(href="/menu/#{product.id}/delete") Eliminar
        